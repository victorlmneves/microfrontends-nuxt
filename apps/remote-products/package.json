{
    "name": "@microfrontends/remote-products",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt dev --port 3001",
        "dev:webpack": "webpack serve --config webpack.config.cjs --port 3001 --open",
        "build:nuxt": "nuxt build",
        "build:webpack": "webpack --config webpack.config.cjs",
        "build": "pnpm run build:nuxt && pnpm run build:webpack && cp -R .nuxt/dist/client/_nuxt .output/public/ && if [ -d .nuxt/dist/client/_nuxt/builds ]; then cp -R .nuxt/dist/client/_nuxt/builds .output/public/_nuxt/; fi",
        "start:webpack": "node .output/webpack/server.js",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
        "type-check": "vue-tsc --noEmit"
    },
    "dependencies": {
        "nuxt": "3.14.159",
        "vue": "3.5.13"
    },
    "devDependencies": {
        "@babel/core": "7.29.0",
        "@babel/preset-env": "7.29.0",
        "@babel/preset-typescript": "7.28.5",
        "@module-federation/vite": "1.10.0",
        "@nuxt/devtools": "1.6.4",
        "@nuxt/webpack-builder": "4.3.1",
        "@types/node": "25.2.3",
        "@vue/compiler-sfc": "3",
        "babel-loader": "10.0.0",
        "css-loader": "7.1.3",
        "sass": "1.97.3",
        "sass-loader": "16.0.7",
        "ts-loader": "9.5.4",
        "typescript": "5.6.3",
        "vue-loader": "17",
        "vue-style-loader": "4.1.3",
        "vue-tsc": "2.1.10"
    }
}
