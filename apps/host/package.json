{
    "name": "@microfrontends/host",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt dev --port 3000",
        "build": "nuxt build",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "lint": "eslint . --ignore-pattern '.nuxt' --ignore-pattern '.output' --ignore-pattern 'dist'",
        "lint:fix": "eslint . --fix --ignore-pattern '.nuxt' --ignore-pattern '.output' --ignore-pattern 'dist'",
        "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\" --ignore-path ../../.prettierignore",
        "type-check": "vue-tsc --noEmit"
    },
    "dependencies": {
        "@module-federation/node": "2.7.32",
        "@module-federation/runtime": "2.0.1",
        "nuxt": "3.14.159",
        "vue": "3.5.13"
    },
    "devDependencies": {
        "@nuxt/devtools": "1.6.4",
        "@nuxt/webpack-builder": "4.3.1",
        "typescript": "5.6.3",
        "vue-tsc": "2.1.10"
    }
}
