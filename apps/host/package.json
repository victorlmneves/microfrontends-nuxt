{
    "name": "@microfrontends/host",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt dev --port 3000",
        "dev:webpack": "webpack serve --config webpack.config.mjs --port 3000 --open",
        "build:nuxt": "nuxt build",
        "build:webpack": "webpack --config webpack.config.mjs",
        "build": "pnpm run build:nuxt && pnpm run build:webpack && cp -R .nuxt/dist/client/_nuxt .output/public/ && if [ -d .nuxt/dist/client/_nuxt/builds ]; then cp -R .nuxt/dist/client/_nuxt/builds .output/public/_nuxt/; fi",
        "start:webpack": "node .output/webpack/server.js",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
        "type-check": "vue-tsc --noEmit"
    },
    "dependencies": {
        "@module-federation/runtime": "2.0.1",
        "nuxt": "3.14.159",
        "vue": "3.5.13"
    },
    "devDependencies": {
        "@nuxt/devtools": "1.6.4",
        "@nuxt/webpack-builder": "4.3.1",
        "typescript": "5.6.3",
        "vue-tsc": "2.1.10",
        "webpack": "5.91.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "5.0.4"
    }
}
