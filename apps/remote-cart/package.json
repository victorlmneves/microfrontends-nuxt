{
    "name": "@microfrontends/remote-cart",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "nuxt dev --port 3002",
        "dev:webpack": "webpack serve --config webpack.client.mjs --port 3002",
        "build:nuxt": "nuxt build",
        "build:webpack": "webpack --config webpack.client.mjs",
        "build": "pnpm run build:nuxt && pnpm run build:webpack && cp -R .nuxt/dist/client/_nuxt .output/public/ && if [ -d .nuxt/dist/client/_nuxt/builds ]; then cp -R .nuxt/dist/client/_nuxt/builds .output/public/_nuxt/; fi",
        "start:webpack": "node .output/webpack/server.js",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "lint": "eslint . --ignore-pattern '.nuxt' --ignore-pattern '.output' --ignore-pattern 'dist'",
        "lint:fix": "eslint . --fix --ignore-pattern '.nuxt' --ignore-pattern '.output' --ignore-pattern 'dist'",
        "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\" --ignore-path ../../.prettierignore",
        "type-check": "vue-tsc --noEmit"
    },
    "dependencies": {
        "nuxt": "3.14.159",
        "vue": "3.5.13"
    },
    "devDependencies": {
        "@module-federation/enhanced": "2.0.1",
        "@nuxt/devtools": "1.6.4",
        "@nuxt/webpack-builder": "4.3.1",
        "@types/node": "25.2.3",
        "@vue/compiler-sfc": "3",
        "css-loader": "7.1.3",
        "sass": "1.97.3",
        "sass-loader": "16.0.7",
        "ts-loader": "9.5.4",
        "typescript": "5.6.3",
        "vue-loader": "17",
        "vue-style-loader": "4.1.3",
        "vue-tsc": "2.1.10",
        "webpack": "5.91.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "5.0.4"
    }
}
